package controllers

import (
  "net/url"
  "net/http"
  "crypto/hmac"
  "crypto/sha256"
  "encoding/hex"
  "github.com/sirupsen/logrus"
  "github.com/gin-gonic/gin"
  "github.com/gorilla/csrf"
  //idp "github.com/charmixer/idp/client"

  "github.com/charmixer/idpui/config"
  "github.com/charmixer/idpui/environment"
)

type otpForm struct {
  Challenge string `form:"challenge" binding:"required"`
  Username string `form:"username" binding:"required"`
  Otp string `form:"otp" binding:"required"`
}

func ShowOtp(env *environment.State, route environment.Route) gin.HandlerFunc {
  fn := func(c *gin.Context) {

    log := c.MustGet(environment.LogKey).(*logrus.Entry)
    log = log.WithFields(logrus.Fields{
      "func": "ShowOtp",
    })

    loginChallenge := c.Query("login_challenge")
    id := c.Query("id")
    sig := c.Query("sig")

    if loginChallenge == "" || id == "" || sig == "" {
      log.Debug("Missing login_challenge")
      log.WithFields(logrus.Fields{
        "login_challenge": loginChallenge,
        "id": id,
        "sig": sig,
      }).Debug("Missing login_challenge, id or sig")
      c.JSON(http.StatusNotFound, gin.H{"error": "Missing login_challenge, id or sig"})
      c.Abort()
      return
    }

    // Check none tampered with the redirect input
    redirectTo :=  "/otp?login_challenge=" + loginChallenge + "&id=" + id

    sigKey := config.GetString("2fa.sigkey")
    h := hmac.New(sha256.New, []byte(sigKey))
    h.Write([]byte(redirectTo))
    sha := hex.EncodeToString(h.Sum(nil))

    if sha != sig {
      c.JSON(http.StatusNotFound, gin.H{"error": "Signature does not match. Hint: Did soneone tamper with the challenge or id paramters?"})
      c.Abort();
      return;
    }

    c.HTML(200, "otp.html", gin.H{
      "__title": "Otp",
      csrf.TemplateTag: csrf.TemplateField(c.Request),
      "challenge": loginChallenge,
      "username": id,
    })
  }
  return gin.HandlerFunc(fn)
}

func SubmitOtp(env *environment.State, route environment.Route) gin.HandlerFunc {
  fn := func(c *gin.Context) {

    log := c.MustGet(environment.LogKey).(*logrus.Entry)
    log = log.WithFields(logrus.Fields{
      "func": "SubmitAuthentication",
    })

    var form otpForm
    err := c.Bind(&form)
    if err != nil {
      log.Debug(err.Error())
      c.JSON(http.StatusBadRequest, gin.H{"error": err.Error()})
      c.Abort()
      return
    }

    log.WithFields(logrus.Fields{"fixme": 1}).Debug("We need to check that the post request challenge was also made from the right client and not tampered with")

    idpClient := idp.NewIdpApiClient(env.IdpApiConfig)

    log.WithFields(logrus.Fields{"fixme":1}).Debug("Do we need to call FetchIdentity here to ensure posted username is correct?")

    log.WithFields(logrus.Fields{"fixme":1}).Debug("should this use NewIdpApiClientWithUserAccessToken instead as http client?")
    var otpRequest = idp.OtpRequest{
      Id: form.Username,
      Otp: form.Otp,
      Challenge: form.Challenge,
    }
    otpResponse, err := idp.VerifyOtp(config.GetString("idp.public.url") + config.GetString("idp.public.endpoints.otp"), idpClient, otpRequest)
    if err != nil {
      log.WithFields(logrus.Fields{
        "id": otpRequest.Id,
        "challenge": otpRequest.Challenge,
      }).Debug(err.Error())
      c.JSON(http.StatusBadRequest, gin.H{"error": err.Error()})
      c.Abort()
      return
    }

    if otpResponse.Verified {
      log.WithFields(logrus.Fields{"redirect_to": otpResponse.RedirectTo}).Debug("Redirecting")
      c.Redirect(http.StatusFound, otpResponse.RedirectTo)
      c.Abort()
      return
    }

    // Deny by default
    // Reject the login challenge.
    log.WithFields(logrus.Fields{"fixme": 1}).Debug("Move error to session flash")
    retryLoginUrl := "/?login_challenge=" + form.Challenge + "&id=" + otpRequest.Id + "&otp_error=Otp verification failed";
    retryUrl, err := url.Parse(retryLoginUrl)
    if err != nil {
      log.Debug(err.Error())
      c.JSON(http.StatusNotFound, gin.H{"error": err.Error()})
      c.Abort()
      return
    }
    log.WithFields(logrus.Fields{"redirect_to": retryUrl.String()}).Debug("Redirecting")
    c.Redirect(http.StatusFound, retryUrl.String())
    c.Abort()
  }
  return gin.HandlerFunc(fn)
}
